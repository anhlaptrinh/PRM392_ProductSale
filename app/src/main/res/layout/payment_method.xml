<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Họ tên người nhận -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Họ và tên"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/et_full_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập họ và tên"
                android:minHeight="48dp"
                android:inputType="textPersonName"/>

            <!-- Số điện thoại -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số điện thoại"
                android:layout_marginTop="12dp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập số điện thoại"
                android:minHeight="48dp"
                android:inputType="phone"/>

            <!-- Địa chỉ giao hàng -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Địa chỉ giao hàng"
                android:layout_marginTop="12dp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/et_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập địa chỉ cụ thể"
                android:minHeight="48dp"
                android:inputType="textPostalAddress"/>

            <!-- Ghi chú -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ghi chú (tuỳ chọn)"
                android:layout_marginTop="12dp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/et_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ghi chú cho đơn hàng"
                android:minHeight="48dp"
                android:inputType="text"/>

            <!-- Chọn phương thức thanh toán -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phương thức thanh toán"
                android:layout_marginTop="16dp"
                android:textStyle="bold"/>

            <RadioGroup
                android:id="@+id/rg_payment_method"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/rb_cod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thanh toán khi nhận hàng (COD)"
                    android:checked="true"/>

                <RadioButton
                    android:id="@+id/rb_momo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thanh toán qua Momo"/>

                <RadioButton
                    android:id="@+id/rb_zalopay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thanh toán qua ZaloPay"/>
            </RadioGroup>

            <!-- Nút đặt hàng -->
            <Button
                android:id="@+id/btn_place_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đặt hàng"
                app:backgroundTint="@null"
                android:background="@drawable/bg_add_button"
                android:layout_marginTop="24dp"/>

        </LinearLayout>
</ScrollView>
</layout>